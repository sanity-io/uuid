{
  "include": ["src", "types"],
  "compilerOptions": {
    "module": "ES6",
    "lib": ["dom", "esnext"],
    "target": "ES5",
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "./lib/esm",
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "esModuleInterop": true
  }
}
